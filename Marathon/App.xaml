<Application x:Class="Marathon.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	StartupUri="MainResourses/MainWindow.xaml">
	<Application.Resources>
		 <Style TargetType="Button">
		 	
		 	<Setter Property="Cursor" Value="Hand" />
		 	
			<Setter Property="Template">
		 		<Setter.Value>
					<ControlTemplate TargetType="Button">
		 				<Border CornerRadius="10" BorderThickness="1" BorderBrush="Black" Background="Gainsboro">
							<ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" Content="{TemplateBinding Content}"></ContentPresenter>
						</Border>
		 			</ControlTemplate>
				</Setter.Value>
		 	</Setter>
		</Style>
	
		<Style TargetType="TextBlock">
			<Setter Property="FontSize" Value="12pt"></Setter>
		</Style>
	</Application.Resources>
</Application>