<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="Marathon.CharityWatchWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Marathon"
	Width="700"
	Height="380">
	<Grid>
		<StackPanel Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center">
			<TextBlock TextAlignment="Center" x:Name="charityName">Название организации</TextBlock>
			
			<Ellipse Margin="0 10 0 10" Width="150" Height="150">
				<Ellipse.Fill>
					<ImageBrush Stretch="Fill" x:Name="charityImage"/>
				</Ellipse.Fill>
			</Ellipse>
		
			<ScrollViewer VerticalScrollBarVisibility="Auto" Height="100" HorizontalScrollBarVisibility="Disabled">
				<StackPanel>
					<TextBlock x:Name="textCharityDesc" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"></TextBlock>
				</StackPanel>
			</ScrollViewer>
		</StackPanel>
	</Grid>
</Window>